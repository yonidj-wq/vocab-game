<script>
  // Vocabulary list (from the photo)
  // You can edit translations if you want.
  const VOCAB = [
    {en:"a quarter past", he:"רבע אחרי"},
    {en:"a quarter to", he:"רבע ל"},
    {en:"adult", he:"מבוגר"},
    {en:"after", he:"אחרי"},
    {en:"again", he:"שוב"},
    {en:"ago", he:"לפני (זמן)"},
    {en:"always", he:"תמיד"},
    {en:"artist", he:"אמן"},
    {en:"aunt", he:"דודה"},
    {en:"because", he:"בגלל"},
    {en:"build", he:"לבנות"},
    {en:"(be) called", he:"להיקרא"},
    {en:"choose", he:"לבחור"},
    {en:"clock", he:"שעון"},
    {en:"club", he:"מועדון"},
    {en:"country", he:"מדינה"},

    {en:"cry", he:"לבכות"},
    {en:"easy", he:"קל"},
    {en:"excited", he:"נרגש"},
    {en:"find", he:"למצוא"},
    {en:"first", he:"ראשון"},
    {en:"fix", he:"לתקן"},
    {en:"get", he:"לקבל"},
    {en:"get up", he:"לקום"},
    {en:"hard", he:"קשה"},
    {en:"hour", he:"שעה"},
    {en:"how", he:"איך"},
    {en:"hurt", he:"לכאוב"},
    {en:"ice", he:"קרח"},
    {en:"important", he:"חשוב"},
    {en:"interesting", he:"מעניין"},
    {en:"keep", he:"לשמור"},

    {en:"later", he:"אחר כך"},
    {en:"lie", he:"לשקר"},
    {en:"many", he:"הרבה"},
    {en:"medal", he:"מדליה"},
    {en:"minute", he:"דקה"},
    {en:"money", he:"כסף"},
    {en:"more", he:"יותר"},
    {en:"move", he:"לזוז"},
    {en:"need", he:"צריך"},
    {en:"neighbor", he:"שכן"},
    {en:"noise", he:"רעש"},
    {en:"of", he:"של"},
    {en:"Olympic Games", he:"המשחקים האולימפיים"},
    {en:"or", he:"או"},
    {en:"our", he:"שלנו"},
    {en:"paint", he:"לצייר"},

    {en:"parent", he:"הורה"},
    {en:"place", he:"מקום"},
    {en:"plate", he:"צלחת"},
    {en:"player", he:"שחקן"},
    {en:"poor", he:"עני"},
    {en:"practice", he:"להתאמן"},
    {en:"prepare", he:"להכין"},
    {en:"prize", he:"פרס"},
    {en:"problem", he:"בעיה"},
    {en:"race", he:"מרוץ"},
    {en:"right", he:"נכון"},
    {en:"road", he:"כביש"},
    {en:"safe", he:"בטוח"},
    {en:"second", he:"שני"},
    {en:"sick", he:"חולה"},
    {en:"sign", he:"שלט / סימן"},

    {en:"some", he:"כמה"},
    {en:"something", he:"משהו"},
    {en:"son", he:"בן"},
    {en:"table tennis", he:"טניס שולחן"},
    {en:"them", he:"אותם"},
    {en:"think", he:"לחשוב"},
    {en:"time", he:"זמן"},
    {en:"tomorrow", he:"מחר"},
    {en:"true", he:"נכון / אמת"},
    {en:"us", he:"אותנו"},
    {en:"use", he:"להשתמש"},
    {en:"was", he:"היה"},
    {en:"way", he:"דרך"},
    {en:"winner", he:"מנצח"},
  ];

  // Helpers
  const $ = (id) => document.getElementById(id);
  const shuffle = (arr) => {
    const a = arr.slice();
    for (let i = a.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [a[i], a[j]] = [a[j], a[i]];
    }
    return a;
  };
  const sample = (arr, n) => shuffle(arr).slice(0, n);
  const normalize = (s) => (s || "").trim().toLowerCase();

  // Score persistence
  const STORE_KEY = "vocab_score_v1";
  const STORE_STREAK = "vocab_streak_v1";
  let score = Number(localStorage.getItem(STORE_KEY) || 0);
  let streak = Number(localStorage.getItem(STORE_STREAK) || 0);
  const setScore = (delta) => {
    score += delta;
    if (score < 0) score = 0;
    $("score").textContent = score;
    localStorage.setItem(STORE_KEY, String(score));
  };
  const setStreak = (val) => {
    streak = val;
    if (streak < 0) streak = 0;
    $("streak").textContent = streak;
    localStorage.setItem(STORE_STREAK, String(streak));
  };
  $("score").textContent = score;
  $("streak").textContent = streak;

  $("resetBtn").addEventListener("click", () => {
    score = 0; streak = 0;
    localStorage.setItem(STORE_KEY, "0");
    localStorage.setItem(STORE_STREAK, "0");
    $("score").textContent = "0";
    $("streak").textContent = "0";
  });

  // Tabs
  const TABS = [
    {id:"flashPanel", name:"כרטיסיות"},
    {id:"matchPanel", name:"התאמות"},
    {id:"quizPanel", name:"טריוויה"},
    {id:"spellPanel", name:"איות"},
  ];
  const tabsEl = $("tabs");
  let active = "flashPanel";

  function show(panelId){
    active = panelId;
    for (const t of TABS){
      $(t.id).classList.toggle("hidden", t.id !== panelId);
    }
    document.querySelectorAll(".tab").forEach(btn => {
      btn.classList.toggle("active", btn.dataset.panel === panelId);
    });
  }

  for (const t of TABS){
    const b = document.createElement("button");
    b.className = "tab" + (t.id === active ? " active" : "");
    b.textContent = t.name;
    b.dataset.panel = t.id;
    b.addEventListener("click", () => show(t.id));
    tabsEl.appendChild(b);
  }

  // Flashcards
  let flashList = shuffle(VOCAB);
  let flashIndex = 0;
  let startWithEnglish = true;

  function renderFlash(){
    const item = flashList[flashIndex];
    const front = startWithEnglish ? item.en : item.he;
    const back  = startWithEnglish ? item.he : item.en;
    $("flashFront").textContent = front;
    $("flashBack").textContent = back;
    $("flashBox").classList.remove("flipped");
  }

  $("flashBox").addEventListener("click", () => $("flashBox").classList.toggle("flipped"));
  $("flipFlash").addEventListener("click", () => $("flashBox").classList.toggle("flipped"));
  $("nextFlash").addEventListener("click", () => { flashIndex = (flashIndex+1) % flashList.length; renderFlash(); });
  $("prevFlash").addEventListener("click", () => { flashIndex = (flashIndex-1+flashList.length) % flashList.length; renderFlash(); });
  $("shuffleFlash").addEventListener("click", () => { flashList = shuffle(flashList); flashIndex = 0; renderFlash(); });
  $("toggleLang").addEventListener("click", () => {
    startWithEnglish = !startWithEnglish;
    $("toggleLang").textContent = startWithEnglish ? "התחל מאנגלית" : "התחל מעברית";
    renderFlash();
  });
  renderFlash();

  // Matching game
  let matchPairs = [];
  let selectedEn = null;
  let selectedHe = null;
  let matchDone = 0;

  function newMatchSet(){
    matchPairs = sample(VOCAB, 10);
    matchDone = 0;
    $("matchStatus").textContent = `${matchDone} / ${matchPairs.length}`;
    selectedEn = null;
    selectedHe = null;

    const enTiles = shuffle(matchPairs.map(p => ({key:p.en, text:p.en, match:p.en})));
    const heTiles = shuffle(matchPairs.map(p => ({key:p.en, text:p.he, match:p.en})));

    const enList = $("enList");
    const heList = $("heList");
    enList.innerHTML = "";
    heList.innerHTML = "";

    for (const t of enTiles){
      const div = document.createElement("div");
      div.className = "tile ltr";
      div.dataset.match = t.match;
      div.dataset.type = "en";
      div.innerHTML = `<span>${t.text}</span><small>EN</small>`;
      div.addEventListener("click", () => onPick(div));
      enList.appendChild(div);
    }
    for (const t of heTiles){
      const div = document.createElement("div");
      div.className = "tile";
      div.dataset.match = t.match;
      div.dataset.type = "he";
      div.innerHTML = `<span>${t.text}</span><small>HE</small>`;
      div.addEventListener("click", () => onPick(div));
      heList.appendChild(div);
    }
  }

  function clearWrong(){
    document.querySelectorAll(".tile.wrong").forEach(x => x.classList.remove("wrong"));
  }

  function onPick(tile){
    if (tile.classList.contains("matched")) return;

    clearWrong();
    const type = tile.dataset.type;

    if (type === "en"){
      document.querySelectorAll('#enList .tile').forEach(x => x.classList.remove("selected"));
      tile.classList.add("selected");
      selectedEn = tile;
    } else {
      document.querySelectorAll('#heList .tile').forEach(x => x.classList.remove("selected"));
      tile.classList.add("selected");
      selectedHe = tile;
    }

    if (selectedEn && selectedHe){
      const ok = selectedEn.dataset.match === selectedHe.dataset.match;
      if (ok){
        selectedEn.classList.remove("selected");
        selectedHe.classList.remove("selected");
        selectedEn.classList.add("matched");
        selectedHe.classList.add("matched");

        matchDone += 1;
        $("matchStatus").textContent = `${matchDone} / ${matchPairs.length}`;

        setScore(10);
        setStreak(streak + 1);

        selectedEn = null;
        selectedHe = null;

        if (matchDone === matchPairs.length){
          setScore(30); // bonus
          $("matchStatus").textContent = `כל הכבוד! ${matchDone} / ${matchPairs.length}`;
        }
      } else {
        selectedEn.classList.add("wrong");
        selectedHe.classList.add("wrong");
        setStreak(0);
        // keep selection for a moment then clear
        setTimeout(() => {
          selectedEn && selectedEn.classList.remove("selected","wrong");
          selectedHe && selectedHe.classList.remove("selected","wrong");
          selectedEn = null;
          selectedHe = null;
        }, 550);
      }
    }
  }

  $("newMatch").addEventListener("click", newMatchSet);
  newMatchSet();

  // Quiz game
  let quizAsked = 0;
  let quizRight = 0;
  let currentQuiz = null;
  let quizLocked = false;

  function newQuizQ(){
    quizLocked = false;
    $("quizNote").textContent = "";
    currentQuiz = sample(VOCAB, 1)[0];
    quizAsked += 1;
    $("quizCount").textContent = `${quizRight} / ${quizAsked - 1}`;

    $("quizWord").textContent = currentQuiz.en;
    const wrong = sample(VOCAB.filter(v => v.en !== currentQuiz.en), 3).map(v => v.he);
    const options = shuffle([currentQuiz.he, ...wrong]);

    const box = $("quizChoices");
    box.innerHTML = "";

    for (const opt of options){
      const div = document.createElement("div");
      div.className = "choice";
      div.textContent = opt;
      div.addEventListener("click", () => {
        if (quizLocked) return;
        quizLocked = true;

        const ok = opt === currentQuiz.he;
        if (ok){
          div.classList.add("good");
          quizRight += 1;
          setScore(8);
          setStreak(streak + 1);
          $("quizNote").textContent = "נכון!";
        } else {
          div.classList.add("bad");
          setStreak(0);
          $("quizNote").textContent = `לא בדיוק. התשובה: ${currentQuiz.he}`;
          // mark correct
          [...box.children].forEach(c => {
            if (c.textContent === currentQuiz.he) c.classList.add("good");
          });
        }
        $("quizCount").textContent = `${quizRight} / ${quizAsked}`;
      });
      box.appendChild(div);
    }
  }

  $("newQuiz").addEventListener("click", newQuizQ);
  newQuizQ();

  // Spelling game
  let currentSpell = null;
  let hintUsed = false;

  function newSpellQ(){
    hintUsed = false;
    $("spellInput").value = "";
    $("spellInput").focus();
    currentSpell = sample(VOCAB, 1)[0];
    $("spellMeaning").textContent = currentSpell.he;
    $("spellResult").innerHTML = `<span>הקלד את המילה באנגלית ואז לחץ בדוק.</span><span class="tag">Spelling</span>`;
  }

  $("newSpell").addEventListener("click", newSpellQ);

  $("hintSpell").addEventListener("click", () => {
    if (!currentSpell) return;
    const first = currentSpell.en[0];
    const input = $("spellInput");
    if (input.value.trim().length === 0){
      input.value = first;
      input.focus();
    }
    hintUsed = true;
  });

  function checkSpell(){
    if (!currentSpell) return;
    const ans = normalize($("spellInput").value);
    const correct = normalize(currentSpell.en);

    if (ans === correct){
      const add = hintUsed ? 6 : 10;
      setScore(add);
      setStreak(streak + 1);
      $("spellResult").innerHTML = `<span>נכון! המילה היא <b class="ltr">${currentSpell.en}</b></span><span class="tag good">+${add}</span>`;
      setTimeout(newSpellQ, 650);
    } else {
      setStreak(0);
      $("spellResult").innerHTML = `<span>לא נכון. התשובה: <b class="ltr">${currentSpell.en}</b></span><span class="tag bad">Try again</span>`;
    }
  }

  $("checkSpell").addEventListener("click", checkSpell);
  $("spellInput").addEventListener("keydown", (e) => {
    if (e.key === "Enter") checkSpell();
  });

  newSpellQ();
</script>
</body>
</html>
